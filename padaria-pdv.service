[Unit]
Description=Padaria PDV Docker Compose
Requires=docker.service
After=docker.service

[Service]
Type=simple
WorkingDirectory=/home/bruno/Panificadora Jardim/padaria-pdv

# Remove containers antigos antes de subir
ExecStartPre=/usr/bin/docker rm -f padaria-frontend || true
ExecStartPre=/usr/bin/docker compose down --remove-orphans
ExecStart=/usr/bin/docker compose up
ExecStop=/usr/bin/docker compose down
TimeoutStartSec=0
Restart=on-failure

[Install]
WantedBy=multi-user.target
